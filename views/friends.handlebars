<link rel="stylesheet" href="/public/css/style_a.css">
<header> 
    <!-- https://www.w3schools.com/howto/howto_css_dropdown_navbar.asp -->
      <div class="navbar">
        <a href="/home">Home Page</a>
        <div class="dropdown">
          <button class="dropbtn">
            Events
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content">
            <a href="/events">All Events</a>
            <a href="/events/city">Search by Borough</a>
            <a href="/events/date">Search by Date</a>
          </div>
        </div>
        <a href="friends">Friends List</a>
        <a href="signoutuser">Signout</a>
      </div>
  </header>


  <body>
    <h2 id="friend-head">{{username}}'s Friends</h2>
    <main>
      {{#if friends.length}}
        <ul class="friends-list">
          {{#each friends}}
            <li class="friend-item">
              <span class="friend-name">{{this}}</span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>You haven't added any friends yet!</p>
      {{/if}}
    </main>
  </body>
